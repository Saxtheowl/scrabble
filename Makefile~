NAME		=	scrabble

DIR		=	src/

CC		=	gcc

RM		=	rm -f

SRCS		=	$(DIR)main.cpp \

OBJS		=	$(SRCS:.cpp=.o)

CXXFLAGS	=	-Wextra -Wall -Wextra -ansi -g3 -I include/ -Werror

$(NAME)		:	$(OBJS)
			$(CC) -o $(NAME) $(OBJS) 

all		:	$(NAME)

clean		:	
			$(RM) $(OBJS)

fclean		:	clean
			$(RM) $(NAME)

re		:	fclean all

.PHONY		:	all clean fclean re
