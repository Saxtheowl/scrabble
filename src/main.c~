#include <stdio.h>
#include <stdlib.h>

int		main(int argc, char **argv)
{
  char *buffer = NULL;
  int read;
  size_t len;
  
  read = getline(&buffer, &len, stdin);
  if (-1 != read)
    puts(buffer);
  else
    printf("No line read...\n");

  printf("Size read: %d\n Len: %d\n", read, len);
  free(buffer);
  return 0;
}
